<configuration>
<!--    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />-->
    <!-- Настройка логирования для Hibernate -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.orm" level="WARN"/>
    <logger name="org.hibernate.cache" level="WARN"/>
    <logger name="org.hibernate.engine.transaction" level="WARN"/>
    <logger name="org.hibernate.jpa" level="WARN"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
